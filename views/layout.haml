- photo = flickr.photos.search(tags: '#landscape, #nature, #beautiful', sort: 'interestingness-desc', safe_search: 3, page: 1, per_page: 50).to_a.shuffle.first
- info = flickr.photos.getInfo(photo_id: photo['id'], secret: photo['secret'])
- photo_url = FlickRaw.url_b(info)
- user_name = info['owner']['username'] || 'Flickr User'
- profile_url = flickr.urls.getUserProfile(user_id: info['owner']['nsid'])['url'] rescue nil

