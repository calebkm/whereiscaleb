%html{style: 'height:100%;'}
  %head
    %title Where is Caleb?
    %meta{name: 'viewport', content: 'initial-scale=1.0, width=device-width'}
    %link{rel: 'stylesheet', media: 'screen', href: '/foundation.css'}
    %link{href: 'https://fonts.googleapis.com/css?family=Montserrat', rel: 'stylesheet'}

  %body{style: "background:url('#{photo_url}') no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size:cover;height:100%;font-family: 'Montserrat',sans-serif;"}
    %table{style: 'width:100%;height:95%;'}
      %tr
        %td{style: 'text-align:center;vertical-align:middle;color:white;'}
          %span{style: 'font-size:10rem;text-shadow:5px 5px 15px #444;'}
            Brattleboro

    .credits{style: 'text-align:right;padding-right:25px;color:white;font-size:.9rem;text-shadow:1px 1px #444;'}
